{
  "name": "@classytic/clockin",
  "version": "2.0.0",
  "description": "Modern attendance management with TypeScript - Plugin-based, event-driven, multi-tenant ready. Analytics, engagement metrics, streaks, check-in/check-out management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "default": "./dist/services/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "attendance",
    "check-in",
    "check-out",
    "analytics",
    "engagement",
    "multi-tenant",
    "streak",
    "dashboard",
    "clockin",
    "employee-tracking",
    "member-tracking",
    "hrm",
    "nodejs",
    "mongoose",
    "typescript",
    "plugin"
  ],
  "author": "Sadman Chowdhury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/classytic/clockin.git"
  },
  "bugs": {
    "url": "https://github.com/classytic/clockin/issues"
  },
  "homepage": "https://github.com/classytic/clockin#readme",
  "peerDependencies": {
    "mongoose": "^8.0.0 || ^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@vitest/coverage-v8": "^3.2.4",
    "mongodb-memory-server": "^10.0.0",
    "mongoose": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck",
    "publish:dry": "npm publish --dry-run --access public",
    "publish:npm": "npm publish --access public",
    "release": "npm run build && npm run typecheck && npm publish --access public",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  }
}
