{
  "name": "@classytic/clockin",
  "version": "1.0.1",
  "description": "Multi-tenant attendance tracking system with analytics, engagement metrics, streaks, check-in/check-out management, and correction workflows",
  "type": "module",
  "main": "./src/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./src/index.js"
    },
    "./init": {
      "types": "./dist/types/init.d.ts",
      "import": "./src/init.js"
    },
    "./config": {
      "types": "./dist/types/config.d.ts",
      "import": "./src/config.js"
    },
    "./enums": {
      "types": "./dist/types/enums.d.ts",
      "import": "./src/enums.js"
    }
  },
  "files": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/**/*.spec.js",
    "!src/**/__tests__/**",
    "dist/types/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "attendance",
    "check-in",
    "check-out",
    "analytics",
    "engagement",
    "multi-tenant",
    "streak",
    "dashboard",
    "clockin",
    "employee-tracking",
    "member-tracking",
    "hrm",
    "nodejs",
    "mongoose"
  ],
  "author": "Sadman Chowdhury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/classytic/clockin.git"
  },
  "bugs": {
    "url": "https://github.com/classytic/clockin/issues"
  },
  "homepage": "https://github.com/classytic/clockin#readme",
  "peerDependencies": {
    "mongoose": "^8.0.0 || ^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "mongoose": "^9.0.0",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "mongoose-paginate-v2": "^1.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "types": "tsc -p tsconfig.types.json",
    "build": "npm run types",
    "type-check": "tsc --noEmit test/type-check.ts --skipLibCheck --moduleResolution NodeNext --module NodeNext",
    "prepublishOnly": "npm run build",
    "example:basic": "node test/examples/basic-usage.js",
    "example:mongoose": "node test/examples/with-mongoose.js",
    "example:workflow": "node test/examples/full-workflow.js",
    "test": "npm run type-check && npm run example:basic && npm run example:mongoose && npm run example:workflow"
  }
}
